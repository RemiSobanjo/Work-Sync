  <script>
    $(document).ready(function () {
      let filter_drp = "Staff Log"
      getStaff_Log();

      //  Filter event listener
      $('#filter_state, #filter_end').on('change', function () {
        if (filter_drp === "Staff Log") {
          getStaff_Log();
        } else {
          getVisit_Log();
        }
      });

      $('#filterLog').on('change', function () {
        const selectedValue = $(this).val();
        filter_drp = selectedValue;

        if (filter_drp === "Staff Log") {
          getStaff_Log();
        } else {
          getVisit_Log();
        }

        //console.log('Selected value:', filter_drp);
        // alert(`You selected: ${selectedValue}`);
      });
    });

    const getStaff_Log = () => {
      const [start, end] = [$('#filter_state').val(), $('#filter_end').val()];

      document.getElementById("log_table").innerHTML = `
          <table id="log" class="display nowrap" style="width:100%">
            <thead>
              <tr>
                <th>S/N</th>
                <th>Staff ID</th>
                <th>First name</th>
                <th>Last name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Role</th>
              </tr>
            </thead>
            
          </table>
        `;

      $('#log').DataTable({
        ajax: {
          url: `https://attendance-system-backend-aqpa.onrender.com/api/staff`,
          data: {
            startDate: start,
            endDate: end
          },
          dataSrc: 'data.DATA', // The key in your JSON where the data lives
        },
        destroy: true,
        responsive: true,
        columns: [
          {
            data: null,
            render: function (data, type, row, meta) {
              return meta.row + 1;
            }
          },
          { data: 'staffID' },
          { data: 'firstName' , defaultContent: '' },
          { data: 'lastName' , defaultContent: '' },
          { data: 'email' , defaultContent: '' },
          { data: 'phone' , defaultContent: '' },
          { data: 'role', defaultContent: ''  }
        ]
      });
    };


    const getVisit_Log = () => {
      const [start, end] = [$('#filter_state').val(), $('#filter_end').val()];

      document.getElementById("log_table").innerHTML = `
          <table id="log" class="display nowrap" style="width:100%">
            <thead>
              <tr>
                <th>S/N</th>
                <th>First name</th>
                <th>Last name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Reason</th>
                <th>Person Visited</th>
              </tr>
            </thead>
          </table>`

      $('#log').DataTable({
        ajax: {
          url: `https://attendance-system-backend-aqpa.onrender.com/api/visitor/visits`,
          data: {
            startDate: start,
            endDate: end
          },
          dataSrc: 'data.DATA'
        },
        destroy: true,
        responsive: true,
        columns: [
          {
            data: null,
            render: function (data, type, row, meta) {
              return meta.row + 1;
            }
          },
          { data: 'firstName' , defaultContent: '' },
          { data: 'lastName' , defaultContent: '' },
          { data: 'email', defaultContent: '' },
          { data: 'phone' , defaultContent: '' },
          { data: 'purposeOfVisit' , defaultContent: '' },
          { data: 'personToVisit' , defaultContent: '' }
        ]
      });
    }
  </script>
  <script>
    DataTable.defaults.responsive = true;

    new DataTable('#log');
  </script>
