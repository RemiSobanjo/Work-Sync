  <script>
    async function fetchAndDisplayTotalStaff() {
      try {
        const response = await fetch('https://attendance-system-backend-aqpa.onrender.com/api/staff');
        const json = await response.json();

        if (json.status === "true" && json.data?.DATA) {
          const allStaff = json.data.DATA;

          // Use a Set to ensure uniqueness by staffID
          const uniqueStaffIDs = new Set(allStaff.map(staff => staff.staffID));
          const totalCount = uniqueStaffIDs.size;

          // Inject into your HTML
          document.getElementById('total-staff-count').textContent = totalCount;
        } else {
          console.error("Invalid response from API:", json);
        }
      } catch (error) {
        console.error("Error fetching staff data:", error);
      }
    }

    // Run on page load
    window.addEventListener('DOMContentLoaded', fetchAndDisplayTotalStaff);
  </script>
