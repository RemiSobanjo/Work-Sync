        <!-- Log table -->
        <div class="content">
          <div class="row">


            <div class="col-lg-12 col-md-12">
              <div class="card card-chart">
                <div class="card-header">
                  <h5 class="card-category">Staff Attendance</h5>
                  <h4 class="card-title">Attendance Metrics</h4>
                  <% if (!attendanceData) { %>
                    <div class="alert alert-danger">Attendance data is missing!</div>
                    <% } else { %>
                      <div class="alert alert-success">Attendance data loaded successfully.</div>
                      <% } %>
                </div>
                <div class="card-body" id="attendance-table">
                  <div class="table-responsive-md">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                      <!-- Week Navigation Buttons -->

                      <!-- Previous Weeks Buttons -->
                      <a href="?offset=<%= week.offset + 1 %>&page=<%= pagination.current %>#attendance-table"
                        class="btn btn-outline-primary">
                        ‚Üê Previous Week
                      </a>

                      <!----Skip to current week -->
                      <% if (week.offset> 0) { %>
                        <a href="?offset=0&page=<%= pagination.current %>#attendance-table" class="btn btn-info">
                          üìÖ Current Week
                        </a>
                        <% } %>

                          <!-- Next Week Button, will only appear when admin clicks previous week button -->
                          <% if (week.offset> 0) { %>
                            <a href="?offset=<%= week.offset - 1 %>&page=<%= pagination.current %>#attendance-table"
                              class="btn btn-outline-success">
                              Next Week ‚Üí
                            </a>
                            <% } %>
                    </div>

                    <div class="row justify-content-between align-items-end mb-3 log-filter">
                      <!-- Left Column: Search + Clear -->
                      <div class="col-md-7 col-sm-6">
                        <form method="GET" class="d-flex gap-2 align-items-center">
                          <input type="hidden" name="offset" value="<%= week.offset %>">
                          <input type="hidden" name="page" value="1">
                          <input type="text" name="search" class="form-control-sm flex-grow-1"
                            placeholder="Search staff name..." value="<%= search || '' %>">
                          <button type="submit" class="btn btn-primary">Search</button>
                          <!-- <a href="" class="btn btn-secondary">Clear Filters</a> -->
                        </form>
                      </div>

                      <!-- Right Column: Date Picker + Go Button -->
                      <div class="col-md-5 col-sm-6">
                        <div class="d-flex gap-2 justify-content-end align-items-center">
                          <input type="date" id="datePicker" class="form-control-sm w-auto flex-grow-1">
                          <button id="jumpToDateBtn" class="btn btn-secondary"><i class="now-ui-icons ui-1_calendar-60"></i></button>
                           <a href="/admin/dashboard" class="btn btn-secondary">Clear Filters</a>
                        </div>
                      </div>
                    </div>

                    <table class="table table-bordered text-center">
                      <thead class="thead-dark">
                        <tr>
                          <th>Name</th>
                          <% weekDays.forEach(day=> { %>
                            <th>
                              <%= day.name %><br>
                                <small>
                                  <%= day.date %>
                                </small>
                            </th>
                            <% }) %>
                              <th>Total</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% attendanceData.forEach(staff=> { %>
                          <tr>
                            <td>
                              <%= staff.name %>
                            </td>
                            <% ['Monday','Tuesday','Wednesday','Thursday','Friday'].forEach(day=> { %>
                              <td>
                                <% if (staff.attendance[day]) { %>
                                  ‚úÖ
                                  <% } else { %>
                                    ‚ùå
                                    <% } %>
                              </td>
                              <% }) %>
                                <td>
                                  <%= staff.total %>
                                </td>
                          </tr>
                          <% }) %>
                      </tbody>
                    </table>
                    <!-- Pagination Controls -->
                    <div class="pagination-container">
                      <ul class="pagination">
                        <% if (pagination.current> 1) { %>
                          <li><a
                              href="?page=<%= pagination.current - 1 %>&offset=<%= week.offset %><%= search ? `&search=${encodeURIComponent(search)}` : '' %>#attendance-table">Prev</a>
                          </li>
                          <% } else { %>
                            <li class="disabled">Prev</li>
                            <% } %>

                              <% for (let i=1; i <=pagination.total; i++) { %>
                                <% if ( i===1 || i===pagination.total || Math.abs(i - pagination.current) <=1 ) { %>
                                  <li class="<%= i === pagination.current ? 'active' : '' %>">
                                    <a
                                      href="?page=<%= i %>&offset=<%= week.offset %><%= search ? `&search=${encodeURIComponent(search)}` : '' %>#attendance-table">
                                      <%= i %>
                                    </a>
                                  </li>
                                  <% } else if ( i===2 && pagination.current> 3 ||
                                    i === pagination.total - 1 && pagination.current < pagination.total - 2 ) { %>
                                      <li>...</li>
                                      <% } %>
                                        <% } %>

                                          <% if (pagination.current < pagination.total) { %>
                                            <li><a
                                                href="?page=<%= pagination.current + 1 %>&offset=<%= week.offset %><%= search ? `&search=${encodeURIComponent(search)}` : '' %>#attendance-table">Next</a>
                                            </li>
                                            <% } else { %>
                                              <li class="disabled">Next</li>
                                              <% } %>
                      </ul>
                    </div>
                  </div>

                </div>
                <div class="card-footer">
                  <div class="stats">
                    <i class="now-ui-icons arrows-1_refresh-69"></i> Just Updated
                  </div>
                </div>
              </div>
