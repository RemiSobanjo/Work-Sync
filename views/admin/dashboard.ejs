  <script>
    $(document).ready(function () {
      // Javascript method's body can be found in assets/js/demos.js
      demo.initDashboardPageCharts();
    });

    // make alert disappear after set time
    window.setTimeout(function () {
      $(".alert").fadeTo(500, 0).slideUp(500, function () {
        $(this).remove();
      });
    }, 4000);

    //date filter
    document.getElementById('jumpToDateBtn').addEventListener('click', function () {
      const selectedDate = document.getElementById('datePicker').value;
      if (!selectedDate) return;

      const inputDate = new Date(selectedDate);
      const now = new Date();

      // Start of current ISO week
      const startOfThisWeek = new Date(now.setDate(now.getDate() - (now.getDay() === 0 ? 6 : now.getDay() - 1)));
      const startOfInputWeek = new Date(inputDate.setDate(inputDate.getDate() - (inputDate.getDay() === 0 ? 6 : inputDate.getDay() - 1)));

      // Calculate offset in weeks
      const diffInTime = startOfInputWeek.getTime() - startOfThisWeek.getTime();
      const offset = Math.round(diffInTime / (7 * 24 * 60 * 60 * 1000));

      // Redirect with new offset and anchor
      const currentPage = <%= pagination.current %>;
      window.location.href = `?offset=${offset}&page=${currentPage}#attendance-table`;
    });
  </script>
