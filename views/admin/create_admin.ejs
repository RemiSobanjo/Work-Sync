    <!--   Endpoint Integration   -->
    <script>
      document
        .getElementById("createAdminForm")
        .addEventListener("submit", async function (e) {
          e.preventDefault();

          const firstName = document.getElementById("firstName").value.trim();
          const lastName = document.getElementById("lastName").value.trim();
          const email = document.getElementById("email").value.trim();
          const phone = document.getElementById("phone").value.trim();

          const token = localStorage.getItem("token"); // Or wherever you store the JWT after login

          if (!token) {
            document.getElementById("message").innerText =
              "Unauthorized: Please log in.";
            return;
          }

          try {
            const res = await fetch("http://localhost:3001/api/admin/create", {
              // Adjust endpoint path as needed
              method: "POST",
              headers: {
                "Content-Type": "application/json",
                Authorization: `Bearer ${token}`,
              },
              body: JSON.stringify({
                firstName,
                lastName,
                email,
                phone,
              }),
            });

            const data = await res.json();

            if (!res.ok) {
              document.getElementById("message").innerText =
                data.message || "Error creating admin.";
              return;
            }

            document.getElementById("message").innerText =
              "Admin created successfully.";
            document.getElementById("createAdminForm").reset();
          } catch (err) {
            document.getElementById("message").innerText =
              "An error occurred while creating admin.";
            console.error(err);
          }
        });

      function generatePassword() {
        const password = Math.random().toString(36).slice(-10);
        document.getElementById("password").value = password;
      }
    </script>

