<!DOCTYPE html>
<html lang="en" itemscope itemtype="http://schema.org/WebPage">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="apple-touch-icon" sizes="76x76" href="img/apple-icon.png">
  <link rel="icon" type="image/png" href="/img/favicon.png">
  <title>
    Clock-In Form
  </title>
  <!--     Fonts and icons     -->
  <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Inter:300,400,500,600,700,900" />
  <!-- Nucleo Icons -->
  <link href="/css/nucleo-icons.css" rel="stylesheet" />
  <link href="/css/nucleo-svg.css" rel="stylesheet" />
  <!-- Font Awesome Icons -->
  <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
  <!-- Material Icons -->
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@24,400,0,0" />
  <!-- CSS Files -->
  <link id="pagestyle" href="/css/style.css" rel="stylesheet" />
  <link id="pagestyle" href="/css/clock.css" rel="stylesheet" />
  <style>
    .hidden-on-load {
      display: none;
    }
  </style>
</head>

<body class="sign-in-basic">

  <section class="">
    <div class="overflow-hidden">
      <div class="row">
        <div class="col">
          <div class="box-shadow-xl overflow-hidden">
            <div class="row">
              <div class="col-lg-6 col-md-6 col-sm-6 position-relative bg-cover px-0 vh-100" loading="lazy">
                <div class="flex-row w-100 ps-5 mb-3 icon h-10 me-3 d-flex mt-3">
                  <i class="fa fa-arrow-left text-gradient text-warning pointer" onclick="window.location.href='/'"></i>
                </div>
                <div class="z-index-2 text-center d-flex h-100 w-100 d-flex m-auto justify-content-center">
                  <div class="mask opacity-8"></div>

                  <!----- start Form ------->
                  <div class="container">
                    <div class="row">
                      <div class="col-9 mx-auto d-flex justify-content-center flex-column">
                        <h3 class="text-center my-3" id="c-heading">Clock Out</h3>
                        <form role="form" id="contact-form" action="/check-out/visitor" method="POST" autocomplete="on">
                          <div class="card-body">
                            <div class="row">
                              <div class="col ps-2">
                                <div class="input-group input-group-dynamic mb-3">
                                  <label class="form-label">Phone Number</label>
                                  <input class="form-control" value="<%= typeof phone !== 'undefined' ? phone : '' %>"
                                    name="phone" type="tel" placeholder="" aria-label="Phone Number...">
                                </div>
                              </div>
                            </div>

                            <div class="row hidden-on-load" id="name-section">
                              <div class="col-md-6">
                                <div class="input-group input-group-dynamic mb-3">
                                  <label class="form-label">First Name</label>
                                  <input class="form-control" id="first_name" name="firstName"
                                    value="<%= typeof firstName !== 'undefined' ? firstName : '' %>"
                                    aria-label="First Name..." type="text" readonly>
                                </div>
                              </div>
                              <div class="col-md-6 ps-2">
                                <div class="input-group input-group-dynamic mb-3">
                                  <label class="form-label">Last Name</label>
                                  <input class="form-control" id="last_name" name="lastName"
                                    value="<%= typeof lastName !== 'undefined' ? lastName : '' %>" type="text"
                                    aria-label="Last Name..." readonly>
                                </div>
                              </div>
                            </div>

                            <div class="row">
                              <div class="col-md-12">
                                <button type="submit" id="btnClick" class="btn bg-gradient-dark w-100">Submit</button>
                              </div>
                            </div>
                          </div>
                        </form>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-12">
                        <% if (error) { %>
                          <div style="color: red;">
                            <%= error %>
                          </div>
                          <% } %>

                            <% if (success) { %>
                              <div style="color: green;">
                                <%= success %>
                              </div>
                              <% } %>
                      </div>
                    </div>
                  </div>

                  <!----- End Form ------->
                </div>
              </div>
              <div class="col-lg-6 col-md-6 col-sm-6 position-relative clock-bg bg-cover px-0 vh-100"
                style="background-image: url('/img/examples/blog2.jpg')" loading="lazy">
                <div class="z-index-2 text-center d-flex h-100 w-100 d-flex m-auto justify-content-center">
                  <div class="mask bg-gradient-dark opacity-8"></div>
                  <!--- digital clock starts-->
                  <div class="clock z-3 mt-5">
                    <div class="hours">
                      <div class="first">
                        <div class="number">0</div>
                      </div>
                      <div class="second">
                        <div class="number">0</div>
                      </div>
                    </div>
                    <div class="tick">:</div>
                    <div class="minutes">
                      <div class="first">
                        <div class="number">0</div>
                      </div>
                      <div class="second">
                        <div class="number">0</div>
                      </div>
                    </div>
                    <div class="tick">:</div>
                    <div class="seconds">
                      <div class="first">
                        <div class="number">0</div>
                      </div>
                      <div class="second infinite">
                        <div class="number">0</div>
                      </div>
                    </div>
                  </div>
                  <!--- didgital clock ends-->
                  <div class="p-5 position-relative text-center my-auto z-index-2">
                    <div class="d-flex p-2 pb-5 text-white">
                      <div class="ps-2">
                        <span class="text-xl display-3 opacity-8">VISITOR</span>
                      </div>
                    </div>
                    <button type="button" class="btn bg-gradient-warning w-auto me-1 mb-0"
                      onclick="window.location.href='/'">Go Back</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!--   Core JS Files   -->
  <script src="/js/core/popper.min.js" type="text/javascript"></script>
  <script src="/js/core/bootstrap.min.js" type="text/javascript"></script>
  <script src="/js/plugins/perfect-scrollbar.min.js"></script>
  <!-- Control Center for Material UI Kit: parallax effects, scripts for the example pages etc -->
  <!--  Google Maps Plugin    -->
  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDTTfWur0PDbZWPr7Pmq8K3jiDp0_xUziI"></script>
  <script src="/js/custom.min.js" type="text/javascript"></script>
  <script src="/js/clock.js" type="text/javascript"></script>

  <% if (typeof firstName !=='undefined' && firstName && typeof lastName !=='undefined' && lastName) { %>
    <script>
      document.addEventListener('DOMContentLoaded', function () {
        document.getElementById("name-section").classList.remove("hidden-on-load");
        // Select all inputs inside input-group-dynamic
        document.querySelectorAll('.input-group-dynamic input').forEach(input => {
          const parent = input.closest('.input-group-dynamic');
          if (input.value.trim() !== '') {
            parent.classList.add('is-filled');
          } else {
            parent.classList.remove('is-filled');
          }
        });
      });
    </script>
    <% } %>
</body>

</html>